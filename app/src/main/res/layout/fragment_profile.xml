<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    tools:context=".ProfileFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_picture_profile_screen"
            android:id="@+id/profilePictureContainer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/profilePictureContainer"
            app:layout_constraintRight_toRightOf="@id/profilePictureContainer"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/profilePicture"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/textViewNumberOfPost"
            app:layout_constraintLeft_toRightOf="@id/profilePictureContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toLeftOf="@id/textViewNumOfCircle"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/textViewNumOfCircle"
            app:layout_constraintLeft_toRightOf="@id/textViewNumberOfPost"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:id="@+id/textViewPosts"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textViewNumberOfPost"
            app:layout_constraintLeft_toRightOf="@id/profilePictureContainer"
            app:layout_constraintRight_toLeftOf="@id/textViewCircle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle"
            android:id="@+id/textViewCircle"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textViewNumOfCircle"
            app:layout_constraintLeft_toRightOf="@id/textViewPosts"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shehab Sajid Khan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/textViewNameProfile"
            app:layout_constraintTop_toBottomOf="@id/profilePictureContainer"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/textViewNameProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/textViewUsernameProfile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Put out what you want back."
            android:id="@+id/textViewBioProfile"
            app:layout_constraintTop_toBottomOf="@id/textViewUsernameProfile"
            android:textSize="24sp"
            android:textColor="#ffff"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:id="@+id/buttonEditProfile"
            android:textColor="@color/tertiaryColor"
            app:layout_constraintTop_toBottomOf="@id/textViewBioProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryColor"
            android:id="@+id/buttonSignOutProfile"
            android:text="Sign out"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textColor="@color/tertiaryColor"
            app:layout_constraintTop_toBottomOf="@id/textViewBioProfile"
            app:layout_constraintLeft_toRightOf="@id/buttonEditProfile"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@id/buttonEditProfile"
            android:background="#ffff"
            android:id="@+id/horizontalDivider"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="@id/horizontalDivider"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/rvPostProfile"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>